        <Button x:Name="R1C1" Grid.Row="1" Grid.Column="1" Style="{StaticResource btnWhite}"/>
        <Button x:Name="R1C2" Grid.Row="1" Grid.Column="2" Style="{StaticResource btnBlack}"/>
        <Button x:Name="R1C3" Grid.Row="1" Grid.Column="3" Style="{StaticResource btnWhite}"/>
        <Button x:Name="R1C4" Grid.Row="1" Grid.Column="4" Style="{StaticResource btnBlack}"/>
        <Button x:Name="R1C5" Grid.Row="1" Grid.Column="5" Style="{StaticResource btnWhite}"/>
        <Button x:Name="R1C6" Grid.Row="1" Grid.Column="6" Style="{StaticResource btnBlack}"/>
        <Button x:Name="R1C7" Grid.Row="1" Grid.Column="7" Style="{StaticResource btnWhite}"/>
        <Button x:Name="R1C8" Grid.Row="1" Grid.Column="8" Style="{StaticResource btnBlack}"/>

        <Border BorderBrush="Black" BorderThickness="1" Grid.RowSpan="8" Grid.Column="1" Grid.ColumnSpan="8" Grid.Row="1"/>
        <Button x:Name="btnAddPiece" Grid.Column="10" Content="Add&#xA;" HorizontalAlignment="Left" Margin="84,77,0,0" Grid.Row="3" VerticalAlignment="Top" Width="164" Height="36" Grid.RowSpan="2" Click="btnAddPiece_Click"/>
        <ComboBox x:Name="PiecesList" Grid.Column="10" HorizontalAlignment="Left" Margin="84,77,0,0" Grid.Row="1" VerticalAlignment="Top" Width="164" Height="36" Grid.RowSpan="2">
        </ComboBox>
        <TextBox x:Name="tbCords" Grid.Column="10" HorizontalAlignment="Left" Margin="84,0,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" Height="36"/>
        <Label Content="1" Grid.Row="1" Style="{StaticResource lbCord}"/>
        <Label Content="2" Grid.Row="2" Style="{StaticResource lbCord}"/>
        <Label Content="3" Grid.Row="3" Style="{StaticResource lbCord}"/>
        <Label Content="4" Grid.Row="4" Style="{StaticResource lbCord}"/>
        <Label Content="5" Grid.Row="5" Style="{StaticResource lbCord}"/>
        <Label Content="6" Grid.Row="6" Style="{StaticResource lbCord}"/>
        <Label Content="7" Grid.Row="7" Style="{StaticResource lbCord}"/>
        <Label Content="8" Grid.Row="8" Style="{StaticResource lbCord}"/>

        <Label Content="1" Grid.Row="8" Grid.Column="9" Style="{StaticResource lbCordH}"/>
        <Label Content="2" Grid.Row="7" Grid.Column="9" Style="{StaticResource lbCordH}"/>
        <Label Content="3" Grid.Row="6" Grid.Column="9" Style="{StaticResource lbCordH}"/>
        <Label Content="4" Grid.Row="5" Grid.Column="9" Style="{StaticResource lbCordH}"/>
        <Label Content="5" Grid.Row="4" Grid.Column="9" Style="{StaticResource lbCordH}"/>
        <Label Content="6" Grid.Row="3" Grid.Column="9" Style="{StaticResource lbCordH}"/>
        <Label Content="7" Grid.Row="2" Grid.Column="9" Style="{StaticResource lbCordH}"/>
        <Label Content="8" Grid.Row="1" Grid.Column="9" Style="{StaticResource lbCordH}"/>

        <Label Content="A" Grid.Row="9" Grid.Column="8" Style="{StaticResource lbCord}"/>
        <Label Content="B" Grid.Row="9" Grid.Column="7" Style="{StaticResource lbCord}"/>
        <Label Content="C" Grid.Row="9" Grid.Column="6" Style="{StaticResource lbCord}"/>
        <Label Content="D" Grid.Row="9" Grid.Column="5" Style="{StaticResource lbCord}"/>
        <Label Content="E" Grid.Row="9" Grid.Column="4" Style="{StaticResource lbCord}"/>
        <Label Content="F" Grid.Row="9" Grid.Column="3" Style="{StaticResource lbCord}"/>
        <Label Content="G" Grid.Row="9" Grid.Column="2" Style="{StaticResource lbCord}"/>
        <Label Content="H" Grid.Row="9" Grid.Column="1" Style="{StaticResource lbCord}"/>

        <Label Content="A" Grid.Column="8" Style="{StaticResource lbCordH}"/>
        <Label Content="B" Grid.Column="7" Style="{StaticResource lbCordH}"/>
        <Label Content="C" Grid.Column="6" Style="{StaticResource lbCordH}"/>
        <Label Content="D" Grid.Column="5" Style="{StaticResource lbCordH}"/>
        <Label Content="E" Grid.Column="4" Style="{StaticResource lbCordH}"/>
        <Label Content="F" Grid.Column="3" Style="{StaticResource lbCordH}"/>
        <Label Content="G" Grid.Column="2" Style="{StaticResource lbCordH}"/>
